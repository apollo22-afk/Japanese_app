<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="root" xmlns="[http://javafx.com/javafx/17](http://javafx.com/javafx/17)" xmlns:fx="[http://javafx.com/fxml/1](http://javafx.com/fxml/1)" fx:controller="com.example.controllers.Practice">

    <!-- Conteúdo principal -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Practice"/>
        <Button text="Conjugar Verbos" onAction="#switchConjVerbs"/>
        <Button text="Completar Frases"/>
        <Button text="Traduzir"/>
        <Button text="Voltar" onAction="#switchToMenu"/>
        <Button text="Abrir Pop-up" onAction="#abrirPopup"/>
    </VBox>

    <!-- Pop-up escondido -->
    <VBox fx:id="popup" spacing="10" alignment="CENTER"
          style="-fx-background-color: white; -fx-border-color: black; -fx-padding: 7;"
          visible="false">
        <Label text="Este é um pop-up personalizado"/>
        <Button text="Fechar" onAction="#fecharPopup"/>
    </VBox>

</StackPane>